{
    "name": "pestphp/pest-plugin-symfony",
    "description": "The Pest Symfony plugin",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin",
        "symfony"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3 || ^8.0",
        "pestphp/pest": "^0.3",
        "pestphp/pest-plugin": "^0.3"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Symfony\\": "src/"
        },
        "files": [
            "src/App.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Pest\\Symfony\\Tests\\App\\": "tests/app",
            "Pest\\Symfony\\Tests\\Plugin\\": "tests/plugin"
        }
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "dev-master",
        "symfony/framework-bundle": "~5.0",
        "symfony/http-kernel": "~5.0",
        "symfony/yaml": "~5.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "lint": "rector process src && php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run && rector process src --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
